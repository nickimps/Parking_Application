<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InfoActivity">

    <TextView
        android:id="@+id/settingsText"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="50dp"
        android:text="Settings"
        android:textSize="30dp"
        android:textAlignment="center"
        android:layout_alignParentEnd="true"
        android:paddingTop="5dp"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/backButton"
        android:layout_width="125dp"
        android:layout_height="50dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:text="Back" />

    <Button
        android:id="@+id/updateButton"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginStart="15dp"
        android:layout_below="@id/permitInsertText"
        android:layout_marginTop="20dp"
        android:text="Update"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/adminScreenButton"
        android:layout_width="215dp"
        android:layout_height="50dp"
        android:layout_marginStart="15dp"
        android:layout_below="@id/updateButton"
        android:layout_marginTop="1dp"
        android:backgroundTint="@color/orange"
        android:text="Go To Admin Screen"
        android:layout_centerHorizontal="true"/>


    <TextView
        android:id="@+id/nameView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter Your Name:"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_below="@id/backButton"
        android:textColor="@color/black"/>


    <EditText
        android:id="@+id/nameInsertText"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/nameView"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:background="#F4F4F4"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        android:textSize="20dp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/permitView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter Permit Number: "
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_below="@id/nameInsertText"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/permitInsertText"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:ems="10"
        android:hint="Permit Number"
        android:textSize="20dp"
        android:background="#F4F4F4"
        android:inputType="textPersonName"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_below="@id/permitView"
        android:textColor="@color/black"/>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="294dp"
        android:layout_height="304dp"
        android:layout_below="@id/updateButton"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="10dp"
        android:alpha="0.15"
        android:src="@drawable/lakehead_print_logo" />

    <Button
        android:id="@+id/logoutButton"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/logo"
        android:text="Logout"
        android:layout_centerHorizontal="true"/>

</android.widget.RelativeLayout>