<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapsActivity">

    <TextView
        android:id="@+id/settingsText"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="50dp"
        android:text="Settings"
        android:textSize="30dp"
        android:textAlignment="center"
        android:layout_alignParentEnd="true"
        android:paddingTop="5dp"/>

    <Button
        android:id="@+id/goBackButton"
        android:layout_width="125dp"
        android:text="Save"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"/>

    <TextView
        android:id="@+id/nameView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter Your Name:"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_below="@id/goBackButton" />


    <EditText
        android:id="@+id/nameInsertText"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/nameView"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:background="#F4F4F4"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/permitView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter Permit Number: "
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_below="@id/nameInsertText"/>

    <EditText
        android:id="@+id/permitInsertText"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:ems="10"
        android:hint="Permit Number"
        android:textSize="20dp"
        android:background="#F4F4F4"
        android:inputType="textPersonName"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_below="@id/permitView"/>

</android.widget.RelativeLayout>